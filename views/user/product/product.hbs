

<!-- ***** Sub Category Area Start ***** -->
<div class="instagram-wrapper" data-aos="fade-up" data-aos-delay="100">
    <div class="breadcrumb-section breadcrumb-bg-color--golden">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row d-flex justify-content-evenly">
                    {{#each subCategory}}
                            <div  class="card mt-2 border-white"  style="width: 8rem; background-color: white; ">
                                <a href="/getSubProductList?subCategoryId={{this._id}}&categoryId={{this.categoryId}}"
                                class="float-left banner-animation ">
                                <img  src="/uploadImage/{{this.image.[0]}}" height="120px" alt="loading image"class="card-img-top">
                                <a class="text-center  text-black fw-bold text-uppercase"  ></i>{{this.subCategoryName}}</a>
                                </a>
                            </div>
                    {{/each}}    
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Sub Category Area End ***** -->

<!-- ***** Product Area Start ***** -->
  <!-- Start Product Default Slider Section -->
    <div class="product-default-slider-section section-top-gap-100 section-fluid">
        <div class="section-title-wrapper" data-aos="fade-up" data-aos-delay="150">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="section-content-gap">
                            <div class="secton-content">
                                <h3 class="section-title text-uppercase">Collection's</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
     
        <div class="product-wrapper" data-aos="fade-up" data-aos-delay="200">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="product-slider-default-2rows default-slider-nav-arrow">
                            <!-- Slider main container -->
                            <div class="swiper-container product-default-slider-4grid-2row">
                                <!-- Additional required wrapper -->
                                <div class="swiper-wrapper">
                                    <!-- Start Product Default Single Item -->
                                     {{#each products}}
                                        <div class="product-default-single-item product-color--golden swiper-slide">
                                            <div class="image-box">
                                                <a href="/getSingleProductView?productId={{this._id}}" class="image-link">
                                                    <img  src="/uploadImage/{{this.image.[0]}}"  alt="">
                                                    <img  src="/uploadImage/{{this.image.[1]}}" alt="">
                                                </a>
                                                <div class="tag">
                                                    <span>sale</span>
                                                </div>
                                                <div class="action-link">
                                                    <div class="action-link-left">
                                                       <a href="/getSingleProductView?productId={{this._id}}" >Product</a>
                                                    </div>
                                                    <div class="action-link-right">
                                                        <a href="#" data-bs-toggle="modal"
                                                            data-bs-target="#modalQuickview"><i
                                                                class="icon-magnifier"></i></a>
                                                         <a onclick="addWishlist('{{this._id}}')"><i class="icon-heart"></i></a>
                                                        <a href="compare.html"><i class="icon-shuffle"></i></a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="content">
                                                <div class="content-left">
                                                    <h7 class="title"><a href="product-details-default.html">{{this.productName}}</a></h7>
                                                    <ul class="review-star">
                                                        <li class="fill"><i class="ion-android-star"></i></li>
                                                        <li class="fill"><i class="ion-android-star"></i></li>
                                                        <li class="fill"><i class="ion-android-star"></i></li>
                                                        <li class="fill"><i class="ion-android-star"></i></li>
                                                        <li class="empty"><i class="ion-android-star"></i></li>
                                                    </ul>
                                                </div>
                                                <div class="content-right">
                                                     {{!-- <input class="text-danger text-decoration-line-through " style="position: absolute;" type="int" name="price"  value="{{this.price}}" hidden>
                                                     <input type="int" name="offerprice" style="position: absolute;" value="{{this.offerPrice}}" hidden> --}}
                                                    <span class="price text-danger text-decoration-line-through">₹{{this.offerPrice}} </span>
                                                    <span class="price">₹{{this.price}}</span>
                                                </div>

                                            </div>
                                        </div>
                                    {{/each}}
                                </div>
                            </div>
                            <!-- If we need navigation buttons -->
                            <div class="swiper-button-prev"></div>
                            <div class="swiper-button-next"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Product Default Slider Section -->     

<!-- ***** Product Area End ***** --> 
<script src="https://unpkg.com/axios@0.25.0/dist/axios.min.js"></script>                      
<script>
 async  function addWishlist(productId){
       
       let body ={}
       body.productId=productId
       console.log('welcome=',body)
        await axios.post('/addWishlist', body).then((res)=>{
          console.log("res.data",res.data)
          if(res.data=="login"){
             location.href = '/login'
          }
        })
    }
</script>
