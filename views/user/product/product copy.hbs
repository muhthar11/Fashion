

<!-- ***** Sub Category Area Start ***** -->

<div class="breadcrumb-section breadcrumb-bg-color--golden">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row d-flex justify-content-evenly">
                {{#each subCategory}}
                        <div  class="card mt-2 border-white"  style="width: 8rem; background-color: white;">
                            <a href="/getSubProductList?subCategoryId={{this._id}}&categoryId={{this.categoryId}}">
                            <img  src="/uploadImage/{{this.image.[0]}}" height="120px" alt="loading image"class="card-img-top">
                            <a class="text-center  text-black fw-bold text-uppercase"  ></i>{{this.subCategoryName}}</a>
                            </a>
                        </div>
                {{/each}}    
                </div>
            </div>
        </div>
    </div>
</div>

<!-- ***** Sub Category Area End ***** -->

<!-- ***** Product Area Start ***** -->
<div class="sort-product-tab-wrapper">
    <div class="container">
        <div class="row">
            <div class="col">
              <div class="d-flex  justify-content-evenly ">
                 {{#each products}}
                  <form action="/addWishlist?productId={{this._id}}&sizeId={{this.size}}"  method="post" role="form">
                    {{!-- <div class="product-slider-default-2rows default-slider-nav-arrow"> --}}
                        <!-- Slider main container -->
             
                            {{!-- <div class="swiper-container product-default-slider-4grid-row"> --}}
                                <!-- Additional required wrapper -->
                                {{!-- <div class="swiper-wrapper"> --}}
                                    <!-- Start Product Default Single Item -->
                                            <div class="product-default-single-item product-color--golden swiper-slide">
                                                <div class="image-box">
                                                    <a href="/getSingleProductView?productId={{this._id}}" class="image-link">
                                                        <img   src="/uploadImage/{{this.image.[0]}}" style="width: 300px " alt="">
                                                        <img   src="/uploadImage/{{this.image.[1]}}" style="width: 300px " alt="">
                                                    </a>
                                                    <div class="action-link">
                                                        <div class="action-link-left">
                                                            <a href="/getSingleProductView?productId={{this._id}}" >Product</a>
                                                        </div>
                                                        <div class="action-link-right">
                                                            <a href="#" data-bs-toggle="modal"
                                                                data-bs-target="#modalQuickview"><i
                                                                    class="icon-magnifier"></i></a>
                                                         <a href=""><button style="color:white ;" class="btn"  type="submit" ><i class="icon-heart"></i></button></a>
                                                            
                                                            <a href="compare.html"><i class="icon-shuffle"></i></a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="content">
                                                    <div class="content-left">
                                                        <h6 class="title"><a href="product-details-default.html">{{this.productName}}</a></h6>
                                                        <ul class="review-star">
                                                            <li class="fill"><i class="ion-android-star"></i></li>
                                                            <li class="fill"><i class="ion-android-star"></i></li>
                                                            <li class="fill"><i class="ion-android-star"></i></li>
                                                            <li class="fill"><i class="ion-android-star"></i></li>
                                                            <li class="empty"><i class="ion-android-star"></i></li>
                                                        </ul>
                                                    </div> 
                                                    <div class="col-xl-2 col-lg-2 col-md-4 col-sm-6 col-12 ">  <i class="bi bi-currency-rupee" ></i>                   
                                                        <input class="text-danger text-decoration-line-through " style="position: absolute;" type="int" name="price"  value="{{this.price}}">
                                                    </div> 
                                                    <div class="col-xl-2 col-lg-2 col-md-4 col-sm-2 col-12 ">  <i class="bi bi-currency-rupee" ></i>  
                                                            <input type="int" name="offerprice" style="position: absolute;" value="{{this.offerPrice}}">
                                                    </div> 
                                              

                                                </div>
                                            </div>
                                    <!-- End Product Default Single Item -->
                                {{!-- </div> --}}
                            {{!-- </div> --}}
                    {{!-- </div> --}}
                   </form> 
                 {{/each}}
            </div>
        </div>
    </div>
</div>         

<!-- ***** Product Area End ***** -->                       

