                                                </div>
                                                </div>
                                            </div>

                                            <!-- Text input -->
                                            <div class="form-outline mb-4">
                                                <input type="text" id="form7Example3" name="roadName" value="{{address.roadName}}" class="form-control" />
                                                <label class="form-label" for="form7Example3">Road Name, Area </label>
                                            </div>

                                            <!-- Text input -->
                                           <div class="row mb-4">
                                                <div class="col">
                                                <div class="form-outline">
                                                    <input type="text" id="form7Example1"  name="phoneNumber" value="{{address.phoneNumber}}" class="form-control" />
                                                    <label class="form-label" for="form7Example1">Phone Number</label>
                                                </div>
                                                </div>
                                                <div class="col">
                                                <div class="form-outline">
                                                    <input type="text" id="form7Example2" name="houseName" value="{{address.houseName}}" class="form-control" />
                                                    <label class="form-label" for="form7Example2">House Name</label>
                                                </div>
                                                </div>
                                            </div>

                                            <!-- Email input -->
                                            <div class="row mb-4">
                                                <div class="col">
                                                <div class="form-outline">
                                                    <input type="text" id="form7Example1" name="district" value="{{address.district}}" class="form-control" />
                                                    <label class="form-label" for="form7Example1">District</label>
                                                </div>
                                                </div>
                                                <div class="col">
                                                <div class="form-outline">
                                                    <input type="text" id="form7Example2" name="state"  value="{{address.state}}" class="form-control" />
                                                    <label class="form-label" for="form7Example2">State</label>
                                                </div>
                                                </div>
                                                <div class="col">
                                                <div class="form-outline">
                                                    <input type="text" id="form7Example2" name="pincode"  value="{{address.pincode}}" class="form-control" />
                                                    <label class="form-label" for="form7Example2">Pincode</label>
                                                </div>
                                                </div>
                                                    <!-- Message input -->
                                                <div class="form-outline mb-4">
                                                    <textarea class="form-control" name="additionalInformation" value="{{address.additionalInformation}}" id="form7Example7" rows="4"></textarea>
                                                    <label class="form-label" for="form7Example7">Additional information</label>
                                                </div>
                                                 <div class="pt-1 mb-4">
                                                    <button class="btn bg-primary btn-lg btn-block"  type="submit">Save</button>
                                                </div>
                                    </form>
                                </div>
                                </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end validation form -->
            <!-- ============================================================== -->
        </div>
    </div>
