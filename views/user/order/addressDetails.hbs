

  <div class="container-fluid  dashboard-content">
        <div class="row">
            <!-- ============================================================== -->
            <!-- validation form -->
            <!-- ============================================================== -->
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card m-5 shadow-lg p-3 mb-5 bg-body rounded" >
                    
                    <div class="card-body">
                            <div class="card mb-4">
                                <div class="card-header py-3">
                                    <h5 class="mb-0 text-uppercase fw-bold">Biling Address</h5>
                                </div>
                                <div class="card-body">
                                    <form action="/saveAddress?id={{address._id}}&path={{path}}" id="address" method="post" role="form">
