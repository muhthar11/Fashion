<head> <link rel="stylesheet" href="/stylesheets/tableStyle.css"></head>
<div class="container-lg">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                 <form action="/admin/quantity?id={{quantity._id}}&productId={{productId}}"  method="post" role="form" >
                    <div class="row">
                        <div class="col-sm-8"><h2>Quantity <b>Details</b></h2></div>
                        <div class="col-sm-4">
                            <button type="button" class="btn btn-info add-new text-white" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="bi bi-plus"></i></i> 
                                Add New
                            </button>
                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Quantity</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">    
                                            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12 ">
                                                <label class="fw-bold">Size</label>
                                                <select type="text" class="form-control" name="size" id="size" required>
                                                        <option selected >select size</option>
                                                        {{#each size}}
                                                            <option  value="{{this._id}}">{{this.size}}</option>
                                                        {{/each}}
                                                </select>    
                                            </div>
                                             <div class="col-xl-6 col-lg-4 col-md-12 col-sm-12 col-12 ">
                                                <label class="fw-bold">price</label>
                                                <input type="number" class="form-control" 
                                                placeholder="price" name="price" value="{{quantity.price}}" required>
                                            </div>
                                            <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12 ">
                                                <label class="fw-bold">Offer Price</label>
                                                <input type="text" class="form-control" 
                                                placeholder="offerPrice"  name="offerPrice" value="{{quantity.offerPrice}}" >
                                            </div>
                                            <div class="col-xl-6 col-lg-4 col-md-12 col-sm-12 col-12 ">
                                                <label class="fw-bold">Quantity</label>
                                                <input type="number" class="form-control" 
                                                placeholder="quantity" name="quantity" value="{{quantity.quantity}}" required>
                                            </div>

                                        </div>     
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary"  data-bs-dismiss="modal">Save</button>
                                    </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                 </form>   
            </div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Size</th>
                        <th>Price</th>
                        <th>Offer Price</th>
                        <th>Quantity</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each quantity}}
                          <tr>
                             {{#each test}}
                                 <td>{{this.size}}</td>
                             {{/each}}
                             <td>{{this.price}}</td>
                             <td>{{this.offerPrice}}</td>
                             <td>{{this.quantity}}</td>
                                <td>
                                      {{!-- <a href="/quantity/quantity?id={{this._id}}" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                       <i class="bi bi-pen-fill"></i>
                                     </a> --}}
                                    <a href="/admin/deleteQuantity?id={{this._id}}"  onclick="return confirm('are you want to delete {{this.categoryName}} ?')">
                                       <i class="bi bi-trash-fill text-danger"></i>
                                    </a>
                                </td>
                            </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>     