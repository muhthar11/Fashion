 <div class="dashboard-wrapper py-4">
    <div class="container-fluid  dashboard-content">
        <div class="row">
            <!-- ============================================================== -->
            <!-- validation form -->
            <!-- ============================================================== -->
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12"></div>
                    <h5 class="card-header">UserDetails</h5>
                    
                    <div class="card-body">
                         <form  action="/admin/user?id={{user._id}}" id="signUpForm" method="post" role="form">
                            <div class="row">
                                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12 ">
                                    <label class="form-label" >Name</label>
                                    <input type="text" name="name"  class="form-control form-control-lg" value="{{user.name}}" required/>
                                </div>

                                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12 ">
                                    <label class="form-label" >Email</label>  
                                    <input type="email" name="email"  class="form-control form-control-lg" value="{{user.email}}" required/>
                                </div>

                                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12 ">
                                    <label class="form-label" >Mobile Number</label>
                                    <input type="number" name="mobileNo"  class="form-control form-control-lg" value="{{user.mobileNo}}" required/>
                                </div>

                                <div class="form-row mt-4">
                                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 mt-5">
                                            <a href="#">
                                                <button class="btn bg-primary" type="submit">Save</button>
                                            </a>
                                        </div>  
                                    </div>
                                </div>    
                          </form>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end validation form -->
            <!-- ============================================================== -->
        </div>
    </div>
 </div>    
 <script>

 // {{!-- ***** validation Start *****  --}}

  $("#signUpForm").validate({
        rules: {
            name: {
                required: true,
                minlength: 2,
                lettersonly: true
            },
            email: {
                required: true,
                email: true,
                noCaps: true
            },
            mobileNo: {
                required: true,
                minlength: 10,
                maxlength: 10
            },
        },
        messages: {
            name: {
                required: "Please enter your name",
                minlength: "Atleast 5 letters",
                lettersonly: "Only Letters"
            },
            email: {
                required: "Please enter your EmailID",
                email: "Enter a valid Email ID",
                noCaps: "Only lower case"
            },
            number: {
                required: "Please enter your Number",
                minlength: "Minimum 10 numbers",
                maxlength: "Maximum 10 numbers"
            },
        }
    });
 
// {{!-- ***** validation End *****  --}}
</script>


    